<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/view_round_white_1"
    android:gravity="center"
    android:minWidth="300dp"
    android:orientation="vertical"
    android:padding="20dp">
    <TextView
        android:id="@+id/confirmTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="50dp"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:fontFamily="@font/gmarketsansttfbold"
        tools:text="확인창입니다." />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/noButton"
            android:background="@drawable/view_border_2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginEnd="7dp"
            android:layout_weight="1"
            android:fontFamily="@font/gmarketsansttfbold"
            android:text="취 소"
            android:textColor="@color/dolphinSky"
            android:textSize="15sp" />
        <Button
            android:id="@+id/yesButton"
            android:background="@drawable/view_border_1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:fontFamily="@font/gmarketsansttfbold"
            android:textColor="@color/white"
            android:text="확 인"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>